<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MoonCat.View.AllCinemaPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Danh sách rạp">
    <ContentPage.Content>
        <StackLayout>
            <ListView
                x:Name="lvCinema"
                HasUnevenRows="True"
                ItemTapped="LvCinema_ItemTapped"
                VerticalOptions="Fill">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="50">
                            <StackLayout Padding="10">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Medium"
                                    Text="{Binding Name}"
                                    TextColor="Red" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>